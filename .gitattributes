# Normalize text files in repository
* text=auto

# Keep source and docs consistent with LF in repo
*.md text eol=lf
*.txt text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.py text eol=lf
*.css text eol=lf
*.html text eol=lf
*.sh text eol=lf

# Windows scripts keep CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary assets
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.svg text eol=lf
*.ico binary
*.pdf binary
*.zip binary
*.woff binary
*.woff2 binary
